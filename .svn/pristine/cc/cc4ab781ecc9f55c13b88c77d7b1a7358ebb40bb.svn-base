<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.score.dao.StudentScoreRetrieveDAO">

<select id="studentAllScoreList" parameterType="int" resultType="Map">
SELECT
   A.LEC_SEMS,
   A.CLS_PCT,
   A.CLS_RCT,
   A.CLS_CRDT,
   E.SJT_CREDIT,
   E.SJT_MAJOR,
   C.PRO_NAME,
   C.LEC_NAME,
   A.CLS_MEXAM,
   A.CLS_FEXAM,
   A.CLS_ATTABS,
   A.CLS_HWK
FROM
    CLS A
    LEFT OUTER JOIN LEC B ON A.LEC_ID = B.LEC_ID
    LEFT OUTER JOIN PLANOK C ON A.LEC_ID = C.LEC_ID
    LEFT OUTER JOIN PLAN D ON C.PLAN_NO = D.PLAN_NO
    LEFT OUTER JOIN SJT E ON D.SJT_ID = E.SJT_ID
WHERE
    CLS_RCT != 0
    AND
    A.USER_NO = #{userNo}
ORDER BY
	A.LEC_SEMS ASC

</select>

<select id="studentScoreList" parameterType="Map" resultType="Map">
SELECT
   A.LEC_SEMS,
   A.CLS_PCT,
   A.CLS_RCT,
   A.CLS_CRDT,
   E.SJT_CREDIT,
   E.SJT_MAJOR,
   C.PRO_NAME,
   C.LEC_NAME,
   A.CLS_MEXAM,
   A.CLS_FEXAM,
   A.CLS_ATTABS,
   A.CLS_HWK
FROM
    CLS A
    LEFT OUTER JOIN LEC B ON A.LEC_ID = B.LEC_ID
    LEFT OUTER JOIN PLANOK C ON A.LEC_ID = C.LEC_ID
    LEFT OUTER JOIN PLAN D ON C.PLAN_NO = D.PLAN_NO
    LEFT OUTER JOIN SJT E ON D.SJT_ID = E.SJT_ID
WHERE
    CLS_RCT != 0
    AND
    A.USER_NO = #{userNo}
    AND
    A.LEC_SEMS = #{sems}
ORDER BY
	A.LEC_SEMS ASC

</select>
</mapper>