let denialBtn = $("denialBtn");


let searchForm = $("#searchForm").ajaxForm({
	dataType:"json"
	, success:function(paging){
		listBody.empty();
		pagingArea.empty();
		searchForm[0].page.value="";
		
		let stuLeaveRequestList = paging.dataList;
		let trTags = [];
		if(stuLeaveRequestList && stuLeaveRequestList.length > 0){
			$.each(stuLeaveRequestList, function(idx, stuLeaveRequest){
				let trTag = $("<tr>")
									.attr("id", stuLeaveRequest.userNo)
									.append(
												$("<td>").append($("<input>")
														.attr("type", "checkbox").attr("name", "chk")
// 														.attr("class","${studentReturnRequest.userNo}")
												)
												, $("<td>").html(stuLeaveRequest.reqId)
												, $("<td>").html(stuLeaveRequest.userNo)
												, $("<td>").html(stuLeaveRequest.userName)
												, $("<td>").html(stuLeaveRequest.colName)	
												, $("<td>").html(stuLeaveRequest.deptName)
												, $("<td>").html(stuLeaveRequest.stuYear) 
												, $("<td>").html(stuLeaveRequest.stuClass)
												, $("<td>").html(stuLeaveRequest.reqSms)
												, $("<td>").html(stuLeaveRequest.semsSdate)
												, $("<td>").html(stuLeaveRequest.semsEdate)
												, $("<td>").html(stuLeaveRequest.stsCode1)
												, $("<td>").append($("<td>").append($("<input>").attr("type", "button")
														.attr("value", "반려").addClass("btn btn-danger btn-sm denialBtn").attr("data-user-no", stuLeaveRequest.userNo))
														.attr("data-bs-toggle", "modal").attr("data-bs-target", "#denailModal"))
									);
				trTags.push(trTag);
			});
		}else{
			let trTag = $("<tr>").html(
							$("<td>").attr("colspan", "11")
									 .html("조건에 맞는 학생이 없음.")
						);
			trTags.push(trTag);
		} // if end
		
		listBody.append(trTags);
		pagingArea.html(paging.pagingHTMLBS)
		
	} // success end
	, resetForm : false
}).submit();	

//페이징 버튼 이벤트
pagingArea.on("click", "a", function(){
	let page = $(this).data("page");
	searchForm.find("[name=page]").val(page);
	searchForm.submit();
});


//승인버튼 눌렀을때 이벤트
function getCheckboxValue()  {
	  // 선택된 목록 가져오기
	let leaveNos = [];
	let leaveNosList = {};
	
	let names = listBody.find('input[name="chk"]:checked');
	
	// 휴학승인 할 학생이 체크되었는지 확인
	if(names.length ==0){
		alert("승인 할 학생을 선택해 주세요.");
		return false;
	}
	 
	// 휴학을 승인할 학생을 추출
	$.each(names, function(idx, name){
		let thisName = $(this).parents("tr").attr("id");
	  	
	  	let jsonEle = {
	  		"userNo" : thisName
	  	};
	  	
	  	leaveNos.push(jsonEle);
 	});
	//휴학처리
	if(leaveNos.length > 0){
		if(confirm("승인처리 후 변경할수 없습니다.\n"+leaveNos.length+"명의 학생의 휴학을 승인하시겠습니까?")){
		}
		$.ajax({
			url : "${cPath}/req/modifyStuLeaveTarget.do",
			method : "post",
			data : JSON.stringify(leaveNos),
			contentType : "application/json",
			dataType : "json",
			beforeSend : function(xhr){
				if (token && header) {
					xhr.setRequestHeader(header, token);
				}
			},
			success : function(resp){
				alert("승인되었습니다.");
				searchForm.submit();
			},
			error : function(jqXHR, textStatus, errorThrown) {
				console.log(jqXHR);
				console.log(textStatus);
				console.log(errorThrown);
			}
		});
	};
	
	  
}	

listBody.on("click", ".denialBtn", function(){
	let pickReqNo = $(this).data("userNo");
	$("#floatingTextarea").val("");
	$("#denailModalLabel").text("[학번 : "+pickReqNo+"] 반려사유 입력");
	$("#denialBtn").data("userNo", pickReqNo);
});

