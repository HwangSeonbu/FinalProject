<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.calendar.dao.CalendarDAO">
	<resultMap type="CalendarVO" id="calendarMap"
		autoMapping="true">
		<id property="acadscNo" column="ACADSC_NO" />
	</resultMap>
	<select id="selectCalendarList" resultMap="calendarMap"
		parameterType="int">
		SELECT
		ACADSC_NO,
		ACADSC_CONT,
		TO_CHAR(ACADSC_START, 'yyyy-mm-dd')ACADSC_START,
		TO_CHAR(ACADSC_END, 'yyyy-mm-dd')ACADSC_END,
		ACADSC_DIV,
		ACADSC_USERNO
		FROM ACADSC
		WHERE ACADSC_DIV = 'B1'
		OR ACADSC_DIV = 'B2'
		AND ACADSC_USERNO = #{ACADSC_USERNO}
	</select>
	<select id="selectCalendar" parameterType="int"
		resultMap="calendarMap">
		SELECT
		ACADSC_NO,
		ACADSC_CONT,
		TO_CHAR(ACADSC_START, 'yyyy-mm-dd')ACADSC_START,
		TO_CHAR(ACADSC_END, 'yyyy-mm-dd')ACADSC_END,
		ACADSC_DIV,
		ACADSC_USERNO
		FROM ACADSC
		WHERE ACADSC_DIV = 'B1'
		OR ACADSC_DIV = 'B2'
		AND ACADSC_USERNO = #{ACADSC_USERNO}
	</select>
	<insert id="insertCalendar" parameterType="CalendarVO">
		<selectKey resultType="int" keyProperty="acadscNo"
			order="BEFORE">
			SELECT ACADSC_SEQ.NEXTVAL
			FROM DUAL
		</selectKey>
		INSERT INTO ACADSC (
		ACADSC_NO,
		ACADSC_CONT,
		ACADSC_START,
		ACADSC_END,
		ACADSC_DIV,
		ACADSC_USERNO
		) VALUES (
		#{acadscNo,jdbcType=NUMERIC}
		,#{acadscCont,jdbcType=VARCHAR}
		,#{acadscStart,jdbcType=VARCHAR}
		,#{acadscEnd,jdbcType=VARCHAR}
		,'B2'
		,#{acadscUserno,jdbcType=NUMERIC}
		)
	</insert>
	<delete id="deleteCalendar" parameterType="int">
		DELETE
		FROM ACADSC
		WHERE ACADSC_DIV = 'B2'
		AND ACADSC_NO = #{acadscNo}
	</delete>
	<update id="updateCalendar" parameterType="CalendarVO">
		UPDATE ACADSC
		SET
		ACADSC_NO = #{acadscNo,jdbcType=NUMERIC}
		,ACADSC_CONT = #{acadscCont,jdbcType=VARCHAR}
		,ACADSC_START = #{acadscStart,jdbcType=VARCHAR}
		,ACADSC_END = #{acadscEnd,jdbcType=VARCHAR}
		,ACADSC_DIV = 'B2'
		WHERE ACADSC_DIV = 'B2'
		AND ACADSC_NO = #{acadscNo}
	</update>
</mapper>