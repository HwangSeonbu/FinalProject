			FROM
				(
					SELECT
					A.USER_NO
					,B.USER_NAME
					,F.COL_NAME
					,F.DEPT_NAME
					,A.DEPT_ID
					,A.STU_YEAR
					,A.STU_CLASS
					,C.REQ_ID
					,C.REQ_SMS
					,D.SEMS_SDATE
					,D.SEMS_EDATE
					,E.STS_CODE1
					,C.REQ_STAT
					FROM STU A
					INNER JOIN USERS B ON A.USER_NO=B.USER_NO
					INNER JOIN REQ C ON C.USER_NO=A.USER_NO
					INNER JOIN SEMSDATA D ON C.REQ_SMS=D.SEMS_NO
					INNER JOIN CODE E ON C.REQ_STAT=E.STS_ID
					INNER JOIN DEPARTMENT F ON F.DEPT_ID=A.DEPT_ID
					WHERE C.REQ_RSN ='B001'
				)A
				<include refid="searchCompCondition" /> 
		)B
		<![CDATA[  
			WHERE RNUM >= #{startRow} AND RNUM <= #{endRow}
		]]>
		ORDER BY STS_CODE1
	</select>
	
	<select id="selectReturnTotalRecord" parameterType="PagingVO" resultType="int">
		SELECT COUNT(*)
		FROM(
			SELECT A.*, ROWNUM RNUM
			FROM
				(
					SELECT
					A.USER_NO
					,B.USER_NAME
					,F.COL_NAME
					,F.DEPT_NAME
					,A.DEPT_ID
					,A.STU_YEAR
					,A.STU_CLASS
					,C.REQ_ID
					,C.REQ_SMS
					,D.SEMS_SDATE
					,D.SEMS_EDATE
					,E.STS_CODE1
					,C.REQ_STAT
					FROM STU A
					INNER JOIN USERS B ON A.USER_NO=B.USER_NO
					INNER JOIN REQ C ON C.USER_NO=A.USER_NO
					INNER JOIN SEMSDATA D ON C.REQ_SMS=D.SEMS_NO
					INNER JOIN CODE E ON C.REQ_STAT=E.STS_ID
					INNER JOIN DEPARTMENT F ON F.DEPT_ID=A.DEPT_ID
